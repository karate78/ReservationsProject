<!DOCTYPE HTML>

<html>
<head>
    <title>Skate Camp Reservations | @ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="~/Content/assets/css/main.css" />
</head>
<body>

    <!-- Header -->
    <header id="header" class="alt">
        <div class="logo"><h2>Skate Camp Reservations</h2> </div>
        <a href="#menu">Menu</a>
    </header>

    <!-- Nav -->
    <nav id="menu">
        <ul class="links">
            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li><a href="@Url.Action("Index", "Locations")">Locations</a></li>
            <li><a href="@Url.Action("Index", "OwnerAssets")">Owner Assets</a></li>
            <li><a href="@Url.Action("Index", "Reservations")">Reservations</a></li>
            <li><a href="@Url.Action("Index", "UserDetails")">User Details</a></li>
            <li>@Html.Partial("_LoginPartial")></li>

            @if (User.IsInRole("Admin"))
            {
                <li><a href="@Url.Action("Index", "RolesAdmin")">Roles Admin</a></li>
                <li><a href="@Url.Action("Index", "UsersAdmin")">Users Admin</a></li>
            }
        </ul>
    </nav>

    <br />
    <br />
    <br />

    <!-- Main -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer id="footer">
        <div class="copyright">
            <p>&copy; @DateTime.Now.Year Skate Camp Reservations</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/Content/assets/js/jquery.min.js"></script>
    <script src="~/Content/assets/js/jquery.scrolly.min.js"></script>
    <script src="~/Content/assets/js/jquery.scrollex.min.js"></script>
    <script src="~/Content/assets/js/skel.min.js"></script>
    <script src="~/Content/assets/js/util.js"></script>
    <script src="~/Content/assets/js/main.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $(".datepicker").datepicker();
        });
    </script>
    @RenderSection("scripts", required: false)

</body>
</html>