@model IEnumerable<ReservationProject.DATA.EF.UserDetail>

@{
    ViewBag.Title = "User Details";
}

<h2>@ViewBag.Title</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "button" })
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Parent)
        </th>
        @if (User.IsInRole("Admin") || User.IsInRole("User"))
        {
            <th></th>
        }

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("Details", new {id = item.UserId})">
                    @Html.DisplayFor(modelItem => item.Parent)
                </a>

            </td>

            @if (User.IsInRole("Admin") || User.IsInRole("User"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Delete", "Delete", new { id = item.UserId })
                    }

                </td>
            }

        </tr>
    }

</table>
